<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale2"
    tools:context="com.sifiso.codetribe.yazisa.Present">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/done_text_color_disabled"
        android:id="@+id/relativeLayout"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Task / Assignment / Test title"
            android:padding="10dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/P_count"
            android:layout_toEndOf="@+id/P_count" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:padding="10dp"
            android:id="@+id/P_count"
            style="@style/textCircleRound"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:ems="10"
        style="@style/BlackCountOvalSmall"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/done_text_color_disabled"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/editText"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="From which subject?"
            android:padding="10dp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/P_count2"
            android:layout_toEndOf="@+id/P_count2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2"
            android:padding="10dp"
            android:id="@+id/P_count2"
            style="@style/textCircleRound"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:layout_margin="20dp"
        android:ems="10"
        style="@style/BlackCountOvalSmall"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/done_text_color_disabled"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/editText3"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Due date was"
            android:padding="10dp"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/P_count3"
            android:layout_toEndOf="@+id/P_count3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3"
            android:padding="10dp"
            android:id="@+id/P_count3"
            style="@style/textCircleRound"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <EditText
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="20dp"
        style="@style/BlackCountOvalSmall"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:ems="7"
        android:id="@+id/button"
        android:layout_marginBottom="10dp"
        style="@style/buttonRectangleOrange"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/l2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/button"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mtn_logo"></LinearLayout>

</RelativeLayout>
