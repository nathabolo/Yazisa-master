<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtabsent"
        style="@style/textRoundRed"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/learnerP"
        android:text="basadi"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignBottom="@+id/txtabsent"
        android:layout_toRightOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Class"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_below="@+id/txtabsent"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtpresent"
        style="@style/textRoundGreen"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="P"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/learnerP"
        android:layout_alignRight="@+id/txtLateCome"
        android:layout_alignEnd="@+id/txtLateCome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="L"
        android:layout_marginTop="5dp"
        style="@style/textRoundBlue"
        android:id="@+id/txtLateCome"

        android:layout_below="@+id/txtpresent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Absentees This Year"
        android:id="@+id/txtFlagAbsent"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Present This Year"
        android:id="@+id/txtFlagPresent"
        android:layout_below="@+id/txtFlagAbsent"
        android:layout_alignLeft="@+id/txtFlagAbsent"
        android:layout_alignStart="@+id/txtFlagAbsent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Late coming This Year"
        android:id="@+id/txtFlagLate"
        android:layout_below="@+id/txtFlagPresent"
        android:layout_alignLeft="@+id/txtFlagPresent"
        android:layout_alignStart="@+id/txtFlagPresent" />

</RelativeLayout>